<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dividerGrey"
    android:orientation="vertical">

    <android.support.design.widget.TabLayout
        android:id="@+id/m_tablayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:layout_gravity="top|center"
        android:background="@drawable/ms_bg_jp"
        app:tabGravity="fill"
        app:tabRippleColor = "@android:color/transparent"
        app:tabIndicatorColor="#00ffffff"
        app:tabIndicatorHeight="@dimen/dp_4"
        app:tabMaxWidth="@dimen/dp_200"
        app:tabMinWidth="@dimen/dp_50"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/colorDb2"
        app:tabTextColor="#000" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:background="@drawable/ms_bg_jp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:background="@mipmap/iocn_ms_tab" />
        </LinearLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/m_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00ffffff" />


    </FrameLayout>
</LinearLayout>
