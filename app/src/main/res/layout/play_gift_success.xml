<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:orientation="vertical"
    android:layout_height="220dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:padding="@dimen/dp_3"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            android:text="完成"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/touming_no_shape"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_jf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="@dimen/dp_3"
        android:layout_gravity="center"
        android:text="积分+2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="100dp"
            android:layout_marginTop="@dimen/dp_3"
            android:layout_height="100dp"
            android:src="@mipmap/jf_success" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_3"
            android:layout_gravity="center"
            android:text="积分的用处：《海鲜风暴》商城下，可在任意一家商店购买商品时抵扣（不可提现）商品价钱，10积分等价于1元，依次类推。"/>
    </LinearLayout>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/tv_num_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我知道啦"
        android:textSize="18sp"
        android:textColor="#fff"
        android:padding="@dimen/dp_5"
        android:layout_margin="@dimen/dp_10"
        android:layout_gravity="right"
        android:background="@drawable/p_button_style"/>

</LinearLayout>