<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <ImageView
        android:id="@+id/img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:padding="@dimen/dp_10"
        android:src="@mipmap/ic_camera"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10"
            android:text="---"/>

        <TextView
            android:id="@+id/dep_goods_delete"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_gravity="right"
            android:textColor="#fff"
            android:background="@drawable/p_button_style"
            android:padding="@dimen/dp_3"
            android:layout_marginVertical="@dimen/dp_3"
            android:text="删除"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingHorizontal="@dimen/dp_10"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="单价:"/>
            <TextView
                android:id="@+id/price"
                android:layout_marginLeft="@dimen/dp_50"
                android:textColor="@color/colorAccentButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="---"/>


            <TextView
                android:id="@+id/number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:gravity="center"
                android:textColor="@color/colorDb3"
                android:layout_centerHorizontal="true"
                android:text="x3"/>

            <TextView
                android:layout_toLeftOf="@+id/all_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总价"/>

            <TextView
                android:id="@+id/all_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/colorAccentButton"
                android:text="---"/>

        </RelativeLayout>
    </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/background_gray1"
        android:layout_marginVertical="@dimen/dp_5"/>
</LinearLayout>
