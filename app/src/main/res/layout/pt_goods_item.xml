<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_3"
    android:background="#fff"
    android:layout_marginHorizontal="1dp"
    android:layout_marginTop="2dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/new_item_img"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center" />
    <LinearLayout
        android:id="@+id/ms_news"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/new_item_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginVertical="@dimen/dp_10"
            android:paddingHorizontal="@dimen/dp_10"
            android:text="标题"
            android:lines="2"
            android:ellipsize="end"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/dp_10"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/h_shape_blue_noradio"
                android:textColor="@color/colorDb3"
                android:padding="@dimen/dp_3"
                android:textSize="8sp"
                android:text="海鲜专卖"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/h_shape_zs_noradio"
                android:textColor="@color/colorZi"
                android:padding="@dimen/dp_3"
                android:textSize="8sp"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="满100减10"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_3"
            android:paddingHorizontal="@dimen/dp_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/app_money"
                android:textColor="@color/colorAccentButton"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/new_item_salse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textStyle="bold"
                android:textColor="@color/colorAccentButton"
                android:textSize="21sp" />

            <TextView
                android:id="@+id/sales_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="000"
                android:layout_marginLeft="@dimen/dp_10"
                android:textColor="@color/divider"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
