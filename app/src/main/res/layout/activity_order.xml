<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.dabangvr.home.activity.OrderActivity">

    <LinearLayout
        android:id="@+id/car_top"
        android:layout_width="match_parent"
        android:background="@color/colorDb3"
        android:layout_height="28dp"
        android:orientation="horizontal" />
<!--头部-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorDb3"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/comment_back"
            android:padding="5dp"
            android:layout_marginTop="3dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/back"
            />
        <TextView
            android:gravity="center"
            android:padding="5dp"
            android:textSize="18sp"
            android:textColor="#fff"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="确认订单"/>
    </RelativeLayout>


    <!--配送信息-->
    <LinearLayout
        android:id="@+id/or_is_address"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <!--<ImageView
            android:padding="5dp"
            android:layout_gravity="center"
            android:layout_marginTop="3dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/a_position"
            />-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收货人:"/>
                <TextView
                    android:id="@+id/orther_address_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收货地址:"/>
                <TextView
                    android:id="@+id/orther_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系方式:"/>
                <TextView
                    android:id="@+id/orther_address_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/orther_set_address"
            android:layout_gravity="center"
            android:padding="5dp"
            android:layout_marginTop="3dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/a_edit"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_margin="10dp"
        android:background="@color/colorDb3"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/recy_demo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <!--积分抵扣-->
            <LinearLayout
                android:id="@+id/ll_inter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/dp_10"
                android:paddingHorizontal="@dimen/dp_10"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorGray5"
                        android:text="当前所持有"/>
                    <TextView
                        android:id="@+id/tv_my_jf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorGray5"
                        android:text="000"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="积分"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Switch
                        android:id="@+id/sw_jf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorGray5"
                        android:text="是否使用积分抵扣？"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>




    <!--底部确认-->
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="合计:" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="21sp"
            android:layout_marginLeft="@dimen/dp_5"
            android:textColor="@color/colorAccentButton"
            android:text="@string/app_money"/>
        <TextView
            android:id="@+id/or_money_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccentButton"
            android:textSize="21sp"
            android:text="0.0" />

        <TextView
            android:id="@+id/tv_jf"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:textColor="@color/colorGray5"
            android:text="---"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/orther_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:padding="5dp"
            android:text="提交订单"
            android:textColor="#fff" />
    </LinearLayout>

</LinearLayout>