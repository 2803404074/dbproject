<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/dp_10"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_marginTop="@dimen/dp_5"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/auth_head"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            fresco:roundAsCircle="true" />


        <View
            android:id="@+id/v_dyline_id"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/auth_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/v_dyline_id"
            android:layout_marginLeft="@dimen/dp_3"
            android:layout_toRightOf="@+id/auth_head"
            android:text="冰冰美女"
            android:textColor="@color/color_2c2c2c"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/v_dyline_id"
            android:layout_marginLeft="@dimen/dp_3"
            android:layout_toRightOf="@+id/auth_head"
            android:text="2分钟以前"
            android:textColor="@color/color_8d8c8c"
            android:textSize="10sp" />

        <CheckBox
            android:id="@+id/tv_follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/h_shape_login"
            android:button="@null"
            android:paddingLeft="@dimen/dp_8"
            android:paddingTop="@dimen/dp_4"
            android:paddingRight="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_4"
            android:text="关注"
            android:textColor="#fff"
            android:textSize="12sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="阿萨大大啊实打实打算啊大苏打阿松大的阿萨大大啊实打实打算啊大苏打阿松大的"
        android:textColor="@color/color_8d8c8c"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_8"
        android:textSize="14sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recy_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_10"
       />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">

        <TextView
            android:id="@+id/auth_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_small"
            android:layout_centerVertical="true"
            android:textColor="@color/color_8d8c8c"
            android:text="2019-07-10" />


        <CheckBox
            android:id="@+id/iv_dz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dz_select"
            android:layout_centerVertical="true"
            android:button="@null"
            android:checked="false"
            android:layout_toLeftOf="@+id/dz_num"
            android:layout_marginRight="@dimen/dp_4"
            android:clickable="false" />

        <TextView
            android:id="@+id/dz_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_toLeftOf="@+id/iv_comment"
            android:textColor="@color/color_8d8c8c"
            android:layout_centerVertical="true"
            android:text="8" />


        <ImageView
            android:id="@+id/iv_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/p_comment"
            android:layout_toLeftOf="@+id/comment_num"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_4"
            />

        <TextView
            android:id="@+id/comment_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_toLeftOf="@+id/tv_for_id"
            android:layout_centerVertical="true"
            android:textColor="@color/color_8d8c8c"
            android:layout_marginRight="@dimen/dp_20"
            android:text="10" />


        <TextView
            android:id="@+id/tv_for_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:drawableLeft="@mipmap/p_forward"
            android:layout_centerVertical="true"
            android:text="12"
            android:textColor="@color/color_8d8c8c"
            android:drawablePadding="@dimen/dp_4"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_4"
        />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/comment_recy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"

        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_24"
        android:orientation="horizontal"
        android:background="@drawable/my_dynamic_shape"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_10"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_5d5d5d"
            android:textSize="10sp"
            android:text="评论"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_16"
            />

    </LinearLayout>



</LinearLayout>
