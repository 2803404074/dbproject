<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dilog_shape"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dilog_tv1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/dilog_main_zhibo"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:text="开直播"/>



        <TextView
            android:id="@+id/dilog_tv2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/dilog_main_vedio"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:text="发视频"/>

        <TextView
            android:id="@+id/dilog_tv3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/dilog_main_dynamic"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:text="发动态"/>

    </LinearLayout>

    <ImageView
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:id="@+id/dilog_main_close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/dilog_main_close" />
</LinearLayout>
