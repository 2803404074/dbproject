<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_fbfafa"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_msg_id"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:layout_marginLeft="@dimen/dp_26"
                android:layout_marginRight="@dimen/dp_26"
                android:background="@color/white"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_id"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/p_news" />

                <TextView
                    android:id="@+id/my_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/iv_id"
                    android:text="消息"
                    android:textColor="@color/color_5d5d5d"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_centerVertical="true"
                    android:rotation="180"
                    android:layout_marginRight="@dimen/dp_8"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/back_black" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_marginLeft="@dimen/dp_28"
                android:layout_marginRight="@dimen/dp_28"
                android:background="@drawable/line_shape"
                android:layerType="software" />


            <RelativeLayout
                android:id="@+id/rl_cols_id"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:layout_marginLeft="@dimen/dp_26"
                android:layout_marginRight="@dimen/dp_26"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/iv_cols_id"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/p_collection" />

                <TextView
                    android:id="@+id/my_sc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/iv_cols_id"
                    android:layout_marginLeft="10dp"
                    android:text="收藏"
                    android:textColor="@color/color_5d5d5d"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_centerVertical="true"
                    android:rotation="180"
                    android:layout_marginRight="@dimen/dp_8"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/back_black" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_marginLeft="@dimen/dp_28"
                android:layout_marginRight="@dimen/dp_28"
                android:background="@drawable/line_shape"
                android:layerType="software" />

            <RelativeLayout
                android:id="@+id/rl_certifi_id"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:layout_marginLeft="@dimen/dp_26"
                android:layout_marginRight="@dimen/dp_26"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/iv_certifi_id"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/p_real_name" />

                <TextView
                    android:id="@+id/my_business"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/iv_certifi_id"
                    android:layout_marginLeft="10dp"
                    android:text="商家认证"
                    android:textColor="@color/color_5d5d5d"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_centerVertical="true"
                    android:rotation="180"
                    android:layout_marginRight="@dimen/dp_8"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/back_black" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_conis_id"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:layout_marginLeft="@dimen/dp_26"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_26"
                android:background="@color/white"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_coins_id"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/p_freshcoin" />

                <TextView
                    android:id="@+id/my_sb"
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@+id/iv_coins_id"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="鲜币中心"
                    android:textColor="@color/color_5d5d5d"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_centerVertical="true"
                    android:rotation="180"
                    android:layout_marginRight="@dimen/dp_8"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/back_black" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_marginLeft="@dimen/dp_28"
                android:layout_marginRight="@dimen/dp_28"
                android:background="@drawable/line_shape"
                android:layerType="software" />

            <RelativeLayout
                android:id="@+id/rl_anchor_id"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:layout_marginLeft="@dimen/dp_26"
                android:layout_marginRight="@dimen/dp_26"
                android:background="@color/white"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_liveAnchor_id"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/p_anchors" />

                <TextView
                    android:id="@+id/my_zb"
                    android:layout_toRightOf="@+id/iv_liveAnchor_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="主播认证"
                    android:textColor="@color/color_5d5d5d"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_centerVertical="true"
                    android:rotation="180"
                    android:layout_marginRight="@dimen/dp_8"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/back_black" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_marginLeft="@dimen/dp_28"
                android:layout_marginRight="@dimen/dp_28"
                android:background="@drawable/line_shape"
                android:layerType="software" />

            <RelativeLayout
                android:id="@+id/ll_setting_id"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:layout_marginLeft="@dimen/dp_26"
                android:layout_marginRight="@dimen/dp_26"
                android:layout_marginBottom="@dimen/dp_26"
                android:background="@color/white"
                android:clickable="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_setting_id"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/p_setting" />

                <TextView
                    android:id="@+id/tv_setting_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/iv_setting_id"
                    android:layout_marginLeft="10dp"
                    android:text="设置"
                    android:textColor="@color/color_5d5d5d"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_centerVertical="true"
                    android:rotation="180"
                    android:layout_marginRight="@dimen/dp_8"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/back_black" />

            </RelativeLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


</LinearLayout>


