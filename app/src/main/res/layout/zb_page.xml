<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_no"
            android:layout_marginTop="@dimen/dp_5"
            android:paddingHorizontal="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_one"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="210dp">

                    <ImageView
                        android:id="@+id/iv_live_bg1"
                        android:layout_width="match_parent"
                        android:layout_height="230dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/app_lunche" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_5"
                        android:background="@drawable/touming_shape"
                        android:paddingHorizontal="@dimen/dp_10">

                        <TextView
                            android:id="@+id/tv_status1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@mipmap/a_must_fill"
                            android:text="直播中"
                            android:textColor="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="@dimen/dp_5"
                            android:text="|"
                            android:layout_marginBottom="@dimen/dp_2"
                            android:textColor="@color/white"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_see_count1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="观看数量"
                            android:textColor="@color/white" />
                    </LinearLayout>

                    <LinearLayout
                        android:paddingHorizontal="@dimen/dp_5"
                        android:id="@+id/ll_live_goods1"
                        android:background="@drawable/touming_no_shape"
                        android:paddingTop="@dimen/dp_5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_goods_img1"
                            android:layout_width="@dimen/dp_50"
                            android:layout_height="@dimen/dp_50"
                            android:layout_alignParentBottom="true"
                            android:background="@color/colorDb3" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="@dimen/dp_5"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            >

                            <TextView
                                android:id="@+id/tv_goods_name1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:lines="2"
                                android:text="商品标题"
                                android:textColor="@color/white" />

                            <TextView
                                android:id="@+id/tv_goods_price1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="￥299"
                                android:textColor="@color/white" />
                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>

                <TextView
                    android:id="@+id/title1"
                    android:background="@color/white"
                    android:layout_above="@+id/ll_bom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="直播标题"
                    android:paddingHorizontal="@dimen/dp_5"
                    android:lines="1"
                    android:textSize="@dimen/sp_17"
                    android:ellipsize="end"
                    android:textColor="#000" />
                <LinearLayout
                    android:id="@+id/ll_bom1"
                    android:background="@color/white"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_5"
                    android:orientation="horizontal">

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/drawee_img1"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        fresco:roundAsCircle="true" />
                    <TextView
                        android:id="@+id/tv_auth1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingHorizontal="@dimen/dp_5"
                        android:textSize="@dimen/sp_17"
                        android:textColor="@color/colorGray5"
                        android:text="主播名称"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_tow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/dp_10"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="210dp">

                    <ImageView
                        android:id="@+id/iv_live_bg"
                        android:layout_width="match_parent"
                        android:layout_height="230dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/app_lunche" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_5"
                        android:background="@drawable/touming_shape"
                        android:paddingHorizontal="@dimen/dp_10">

                        <TextView
                            android:id="@+id/tv_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@mipmap/a_must_fill"
                            android:text="直播中"
                            android:textColor="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="@dimen/dp_5"
                            android:text="|"
                            android:layout_marginBottom="@dimen/dp_2"
                            android:textColor="@color/white"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_see_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="观看数量"
                            android:textColor="@color/white" />
                    </LinearLayout>

                    <LinearLayout
                        android:paddingHorizontal="@dimen/dp_5"
                        android:id="@+id/ll_live_goods"
                        android:background="@drawable/touming_no_shape"
                        android:paddingTop="@dimen/dp_5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_goods_img"
                            android:layout_width="@dimen/dp_50"
                            android:layout_height="@dimen/dp_50"
                            android:layout_alignParentBottom="true"
                            android:background="@color/colorDb3" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:paddingHorizontal="@dimen/dp_5">

                            <TextView
                                android:id="@+id/tv_goods_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:lines="2"
                                android:text="商品标题"
                                android:textColor="@color/white" />

                            <TextView
                                android:id="@+id/tv_goods_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="￥299"
                                android:textColor="@color/white" />
                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>

                <TextView
                    android:id="@+id/title"
                    android:background="@color/white"
                    android:layout_above="@+id/ll_bom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="直播标题"
                    android:textSize="@dimen/sp_17"
                    android:paddingHorizontal="@dimen/dp_5"
                    android:lines="1"
                    android:ellipsize="end"
                    android:textColor="#000" />
                <LinearLayout
                    android:id="@+id/ll_bom"
                    android:background="@color/white"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_5"
                    android:orientation="horizontal">

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/drawee_img"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        fresco:roundAsCircle="true" />
                    <TextView
                        android:id="@+id/tv_auth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingHorizontal="@dimen/dp_5"
                        android:textSize="@dimen/sp_17"
                        android:textColor="@color/colorGray5"
                        android:text="主播名称"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/recy_type"
            android:layout_margin="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_10" />
    </LinearLayout>


</android.support.v4.widget.NestedScrollView>
