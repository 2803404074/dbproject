<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/hx_item_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingVertical="@dimen/dp_5"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/hx_img"
            android:scaleType="fitXY"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_5">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="2"
                android:ellipsize="end"
                android:text="标题"
                android:textColor="@color/colorGray6"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="2"
                android:textSize="@dimen/sp_8"
                android:ellipsize="end"
                android:text="标题"
                android:layout_marginVertical="@dimen/dp_5" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/h_shape_blue_noradio"
                    android:textColor="@color/colorDb3"
                    android:padding="@dimen/dp_3"
                    android:textSize="8sp"
                    android:text="海鲜专卖"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/h_shape_zs_noradio"
                    android:textColor="@color/colorZi"
                    android:padding="@dimen/dp_3"
                    android:textSize="8sp"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:text="满100减10"/>
            </LinearLayout>

            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/dp_5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_money"
                    android:textSize="@dimen/sp_8"
                    android:textColor="@color/colorAccentButton" />

                <TextView
                    android:id="@+id/hx_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="000"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/colorAccentButton" />

                <TextView
                    android:id="@+id/hx_market"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:textSize="@dimen/sp_10"
                    android:layout_marginVertical="@dimen/dp_3"
                    android:text="市场价" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/sales_num"
                    android:textSize="@dimen/sp_8"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已售1.1万件"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <View
        android:layout_below="@+id/count"
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:layout_marginTop="@dimen/dp_5"
        android:background="@color/colorGray2" />


</RelativeLayout>
