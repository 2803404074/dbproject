<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dabangvr.home.activity.OrtherOKActivity">

    <!--title-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_170"
        android:background="@color/colorDb3"
        android:padding="5dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:padding="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_20"
            android:src="@drawable/back"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="订单详情"
            android:textSize="@dimen/sp_18"
            android:textColor="#fff"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_alignParentRight="true"
            android:src="@mipmap/server"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:src="@mipmap/null_data"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/or_is_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:padding="@dimen/dp_5"
            android:layout_gravity="center"
            android:layout_marginTop="-10dp"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:src="@mipmap/dep_location"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:textSize="@dimen/sp_16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorGray6"
                    android:text="收货人:"/>
                <TextView
                    android:textSize="@dimen/sp_16"
                    android:id="@+id/tvName"
                    android:textColor="@color/colorGray6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="大邦"/>

                <TextView
                    android:textSize="@dimen/sp_16"
                    android:id="@+id/tvPhone"
                    android:textColor="@color/colorGray6"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18894720202"/>
            </LinearLayout>

            <TextView
                android:textSize="@dimen/sp_13"
                android:id="@+id/orther_address"
                android:textColor="@color/colorGray5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="航洋国际"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginVertical="@dimen/dp_5"
                android:background="@color/colorGray3"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_2"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/colorGray6"
                    android:text="总额："/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/colorAccentButton"
                    android:text="¥125.5"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_20"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_13"
            android:paddingVertical="@dimen/dp_3"
            android:background="@drawable/h_shape_gray"
            android:paddingHorizontal="@dimen/dp_10"
            android:text="查看订单"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_13"
            android:layout_marginLeft="@dimen/dp_20"
            android:paddingVertical="@dimen/dp_3"
            android:background="@drawable/h_shape_gray"
            android:paddingHorizontal="@dimen/dp_10"
            android:text="查看订单"/>
    </LinearLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@color/colorGray1"
        android:padding="@dimen/dp_10"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorGray6"
            android:textSize="@dimen/sp_15"
            android:layout_centerHorizontal="true"
            android:text="猜你还喜欢"/>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:background="@color/colorGray1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>