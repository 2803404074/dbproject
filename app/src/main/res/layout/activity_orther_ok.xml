<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dabangvr.home.activity.OrtherOKActivity">

    <LinearLayout
        android:id="@+id/car_top"
        android:layout_width="match_parent"
        android:background="@color/colorDb3"
        android:layout_height="28dp"
        android:orientation="horizontal" />
    <!--title-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorDb3"
        android:padding="5dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="5dp"
            android:layout_gravity="center"
            android:src="@drawable/back"/>
        <TextView
            android:layout_width="0dp"
            android:text="付款状态"
            android:textSize="18sp"
            android:textColor="#fff"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:padding="5dp"
            android:text="保存"
            android:visibility="invisible"
            android:textColor="#fff"
            android:layout_gravity="center"
            />
    </LinearLayout>

    <ImageView
        android:id="@+id/errno_img"
        android:layout_marginTop="20dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/s_successful"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/order_status"
        android:layout_gravity="center"
        android:textColor="@color/colorDb2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="--"/>
    <TextView
        android:id="@+id/order_tips"
        android:layout_gravity="center"
        android:textColor="@color/colorDb2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="--"/>
    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_see_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColor="@color/divider"
            android:text="查看订单"/>

        <TextView
            android:id="@+id/tv_go_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/colorDb2"
            android:text="继续购物"/>
    </LinearLayout>

    <TextView
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/divider"
        android:text="猜你还喜欢"/>
    <ListView
        android:id="@+id/lv_guess_like"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>
</LinearLayout>