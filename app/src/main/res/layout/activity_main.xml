<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dabangvr.main.MainActivity">

    <!--<RelativeLayout-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:layout_weight="1">-->


        <FrameLayout
            android:id="@+id/fg_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    <!--</RelativeLayout>-->


    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_above="@+id/main_radiogrop"
        android:background="@color/color_f4f4f4" />

    <RadioGroup
        android:id="@+id/main_radiogrop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#FFF"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dp_2"
        android:paddingBottom="@dimen/dp_2">

        <RadioButton
            android:id="@+id/main_home"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/main_home"
            android:drawablePadding="@dimen/dp_2"
            android:gravity="center"
            android:text="首页"
            android:textColor="@color/colorDb3"
            android:textSize="@dimen/text_small" />

        <RadioButton
            android:id="@+id/main_zhibo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:button="@null"
            android:textColor="@color/colorDb3"
            android:drawableTop="@drawable/main_zhibo"
            android:drawablePadding="@dimen/dp_2"
            android:gravity="center"
            android:text="直播购"
            android:textSize="@dimen/text_small" />

        <TextView
            android:id="@+id/main_orther"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="7dp"
            android:layout_weight="1"
            android:gravity="center" />

        <RadioButton
            android:id="@+id/main_video"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:button="@null"
            android:textColor="@color/colorDb3"
            android:drawableTop="@drawable/main_cart"
            android:drawablePadding="@dimen/dp_2"
            android:gravity="center"
            android:text="购物车"
            android:textSize="@dimen/text_small" />


        <RadioButton
            android:id="@+id/main_my"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:button="@null"
            android:textColor="@color/colorDb3"
            android:drawableTop="@drawable/main_my"
            android:drawablePadding="@dimen/dp_2"
            android:gravity="center"
            android:text="我的"
            android:textSize="@dimen/text_small" />
    </RadioGroup>

    <ImageView
        android:id="@+id/iv_cent_id"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_10"
        android:src="@drawable/m_orther" />


</RelativeLayout>