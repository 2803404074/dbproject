<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".my.activity.SetPhoneActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/colorDb3"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/ph_back"
            android:padding="5dp"
            android:layout_gravity="center"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/back"/>
    </LinearLayout>



    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:textSize="21sp"
        android:textColor="@color/colorGray5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="绑定您的手机号"/>
    <TextView
        android:layout_marginLeft="20dp"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="可以使您更快找到您的好友"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="20dp"
            android:textSize="21sp"
            android:textColor="@color/colorGray5"
            android:textStyle="bold"
            android:text="手机"/>
        <EditText
            android:id="@+id/et_number"
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="请输入您的手机号"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="21sp"
            android:textStyle="bold"
            android:textColor="@color/colorGray5"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="请输入验证码:"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/et_code"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:hint="请输入您的验证码"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/get_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/h_shape_login"
            android:text="获取验证码"
            android:textColor="@color/colorHs1"
            />
    </LinearLayout>


    <TextView
        android:id="@+id/set_phone_ok"
        android:layout_width="200dp"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="#fff"
        android:padding="10dp"
        android:background="@drawable/p_button_style"
        android:text="确定绑定"/>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="我已阅读并同意"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorDb2"
            android:text="《海鲜风暴协议》"/>
    </LinearLayout>


</LinearLayout>