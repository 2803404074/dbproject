<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray1"
    tools:context="com.dabangvr.my.activity.UserMessActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <!--title-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorDb3"
        android:padding="5dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/backe"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="5dp"
            android:layout_gravity="center"
            android:src="@drawable/back"/>
        <TextView
            android:layout_width="0dp"
            android:text="设置"
            android:paddingRight="30dp"
            android:textSize="18sp"
            android:textColor="#fff"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>

    <!--头像-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="open_cam"
        android:gravity="center"
        android:background="#fff"
        android:paddingVertical="@dimen/dp_5"
        android:orientation="horizontal">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/mess_drawee_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="0dp"
            fresco:roundAsCircle="true" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/my_set_gxqm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个性签名"
            android:layout_marginRight="20dp"
            android:maxLength="18"/>
    </LinearLayout>


    <!--昵称-->
    <LinearLayout
        android:id="@+id/linear_nick"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:paddingTop="5dp"
            android:layout_gravity="center"
            android:src="@mipmap/s_nickname"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:text="昵称"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/set_nc"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="---"/>
    </LinearLayout>
    <View
        android:layout_height="0.5dip"
        android:layout_margin="5dp"
        android:background="@color/divider"
        android:layout_width="match_parent"/>
    <!--性别-->
    <LinearLayout
        android:id="@+id/linear_sex"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:layout_gravity="center"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:paddingTop="5dp"
            android:src="@mipmap/s_gender"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:text="性别"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/set_sex"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"/>
    </LinearLayout>
    <View
        android:layout_height="0.5dip"
        android:layout_margin="5dp"
        android:background="@color/divider"
        android:layout_width="match_parent"/>
    <!--常住地-->
    <LinearLayout
        android:id="@+id/linear_czd"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:layout_gravity="center"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:paddingTop="5dp"
            android:src="@mipmap/s_address"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:text="常住地"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/set_live_now"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:text="--"/>
    </LinearLayout>
    <View
        android:layout_margin="5dp"
        android:layout_height="0.5dip"
        android:background="@color/divider"
        android:layout_width="match_parent"/>
    <!--绑定手机号-->
    <LinearLayout
        android:id="@+id/linear_band_phone"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:paddingTop="5dp"
            android:src="@mipmap/s_phone"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:text="绑定手机号"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/set_phone"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:text="--"/>
    </LinearLayout>

    <View
        android:layout_margin="5dp"
        android:layout_height="0.5dip"
        android:background="@color/divider"
        android:layout_width="match_parent"/>
    <!--我的地址-->
    <LinearLayout
        android:id="@+id/linear_address"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:layout_gravity="center"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:paddingTop="5dp"
            android:src="@mipmap/s_password2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:text="我的地址"/>
    </LinearLayout>
    <View
        android:layout_margin="5dp"
        android:layout_height="0.5dip"
        android:background="@color/divider"
        android:layout_width="match_parent"/>
    <!--清楚缓存-->
    <LinearLayout
        android:id="@+id/linear_redis"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:layout_gravity="center"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:paddingTop="5dp"
            android:src="@mipmap/s_cache"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:text="清除缓存"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/set_cache"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"/>
    </LinearLayout>
    <View
        android:layout_margin="5dp"
        android:layout_height="0.5dip"
        android:background="@color/divider"
        android:layout_width="match_parent"/>
    <!--检查更新-->
    <LinearLayout
        android:padding="5dp"
        android:id="@+id/linear_check_update"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:layout_gravity="center"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:paddingTop="5dp"
            android:src="@mipmap/s_update"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:text="检查更新"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"/>
    </LinearLayout>
    <View
        android:layout_margin="5dp"
        android:layout_height="0.5dip"
        android:background="@color/divider"
        android:layout_width="match_parent"/>
    <!--给个好评-->
    <LinearLayout
        android:id="@+id/linear_dz"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:layout_gravity="center"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:paddingTop="5dp"
            android:src="@mipmap/s_praise"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:text="给个好评"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/tv_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="退出登陆"
        android:padding="10dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="#fff"
        android:layout_marginBottom="30dp"
        android:background="@drawable/p_button_style"/>
    </LinearLayout>
</ScrollView>