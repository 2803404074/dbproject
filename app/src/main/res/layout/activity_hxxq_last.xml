<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.example.hxxq.CustomScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:id="@+id/container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />
                    <!--实际用户操作的tablayout-->
                </FrameLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/orther_recy"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_marginRight="@dimen/dp_8" />
            </LinearLayout>

        </com.example.hxxq.CustomScrollView>


        <!--app:tabIndicatorColor="@color/color_18dadc"-->
        <!--app:tabMode="fixed"-->
        <!--app:tabMaxWidth="@dimen/dp_80"-->
        <!--app:tabGravity="fill"-->
        <!--app:tabSelectedTextColor="@color/color_18dadc"-->
        <android.support.design.widget.TabLayout
            android:id="@+id/tablayout_real"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:background="#fff"
            android:visibility="gone"
            app:tabMaxWidth="80dp"
            android:layout_gravity="bottom"
            app:tabIndicatorColor="#18dadc"
            app:tabIndicatorFullWidth="false"
            app:tabSelectedTextColor="#18dadc"
            app:tabTextAppearance="@style/TabLayoutTextStyle"
            />

        <ImageView
            android:id="@+id/backe"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:padding="@dimen/dp_5"
            android:background="@drawable/touming_ruang"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_gravity="center"
            android:src="@drawable/back"/>
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/color_ebebeb"
        />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cb_collection_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/shop_selector"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginBottom="@dimen/dp_4"
            android:text="店铺"
            android:layout_gravity="center"
            android:gravity="center"/>


        <CheckBox
            android:id="@+id/hx_sc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/hxxq_sc_bottom"
            android:text="收藏"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginBottom="@dimen/dp_4"
            android:gravity="center"/>

        <!--android:drawableTop="@drawable/hx_jg"-->
        <RadioButton
            android:id="@+id/hx_jg"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textSize="@dimen/text_normal"
            android:textColor="@color/color_079b9c"
            android:button="@null"
            android:gravity="center"
            android:background="@color/color_9bfbfb"
            android:text="加入购物车" />

        <RadioButton
            android:id="@+id/hx_shop"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:visibility="gone"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:background="@color/color_18dadc"
            android:button="@null"
            android:text="单独购买"
            android:gravity="center"
            android:textSize="@dimen/text_normal"
            android:textColor="#fff" />

        <RadioButton
            android:id="@+id/hx_shop_pt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:background="@color/color_18dadc"
            android:button="@null"
            android:text="拼团购买"
            android:gravity="center"
            android:visibility="gone"
            android:textColor="#fff" />
    </RadioGroup>
</LinearLayout>