<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tl="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/dp_30"
    android:background="@color/colorDb3"
    android:orientation="vertical">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@color/colorDb3"
        android:orientation="horizontal">


        <LinearLayout

            android:id="@+id/rl_tab"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.7"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/home_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:drawableTop="@mipmap/home_type"
                android:gravity="center"
                android:text="分类"
                android:paddingTop="@dimen/dp_3"
                android:layout_marginTop="@dimen/dp_3"
                android:textColor="#fff"
                android:textSize="@dimen/sp_10"
                android:textStyle="bold" />


            <android.support.design.widget.TabLayout
                android:id="@+id/tabs"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_3"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                app:tabIndicator="@drawable/tab_indicator"
                app:tabIndicatorColor="@android:color/white"
                app:tabMaxWidth="200dp"
                app:tabMinWidth="20dp"
                app:tabPaddingBottom="0dp"
                app:tabPaddingEnd="-1dp"
                app:tabPaddingStart="-1dp"
                app:tabPaddingTop="-1dp"
                app:tabSelectedTextColor="@android:color/white"
                app:tabTextAppearance="@style/TabLayoutTextStyle"
                app:tabTextColor="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@color/colorDb3"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/home_search"
                android:layout_width="1dp"
                android:layout_height="@dimen/dp_18"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_weight="1"
                android:background="@drawable/home_search_shape"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/start_search"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="3dp"
                    android:src="@mipmap/h_search" />

                <com.paradoxie.autoscrolltextview.VerticalTextview
                    android:id="@+id/search_edit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:textColor="@color/color_939393"
                    android:textSize="@dimen/text_normal" />

            </LinearLayout>

            <TextView
                android:id="@+id/h_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:drawableTop="@mipmap/message"
                android:paddingLeft="@dimen/dp_15"
                android:paddingTop="5dp"
                android:layout_gravity="center"
                android:paddingRight="@dimen/dp_10"
                android:text="消息"
                android:textColor="#fff"
                android:textSize="@dimen/dp_8"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>

</FrameLayout>
