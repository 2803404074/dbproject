<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/arc_bgo_white"
    android:layout_height="150dp"
    android:orientation="vertical"
    android:padding="10dp">

    <ImageView
        android:id="@+id/ms_li_img"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/ms_li_img"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ms_li_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="2"
            android:text="max"
            android:textSize="@dimen/dp_15"
            android:textStyle="bold" />

        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_marginTop="@dimen/dp_5">

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@drawable/progressbar_round_bg"
                android:orientation="horizontal" />

            <LinearLayout
                android:id="@+id/ff_fe"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="@drawable/progressbar_round_bgto"
                android:orientation="horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="已经完成"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/tv_b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="60%"
                    android:textSize="10dp" />
            </LinearLayout>


        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="就是不包邮"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥"
                android:textColor="@color/red"
                android:textSize="21sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ms_li_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="59.0"
                android:textColor="@color/red"
                android:textSize="21sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ms_li_market"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="100.0"
                android:textColor="@color/divider"
                android:textSize="12sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView

                android:id="@+id/ms_li_go"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:background="@drawable/btn_round_bg"
                android:padding="5dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:text="立即抢购 >"
                android:textColor="@color/colorFF1c38" />
        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_marginTop="@dimen/dp_10"
        android:layout_height="1dp"
        android:background="@color/divider"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"/>

</RelativeLayout>
