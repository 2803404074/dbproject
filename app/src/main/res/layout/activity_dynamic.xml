<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".dynamic.activity.DynamicActivity">
    <LinearLayout
        android:id="@+id/car_top"
        android:layout_width="match_parent"
        android:background="@color/colorDb3"
        android:layout_height="28dp"
        android:orientation="horizontal" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:background="@color/colorDb3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:padding="@dimen/dp_5"
                android:id="@+id/back"
                android:src="@drawable/back"/>
            <TextView
                android:id="@+id/tv_report"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发表"
                android:background="@drawable/h_shape_blue"
                android:textColor="#000"
                android:padding="@dimen/dp_5"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <EditText
            android:id="@+id/et_content"
            android:layout_margin="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="触目惊心的海鲜"
            android:background="@null"/>

        <!--<com.dabangvr.common.picture.NoScrollGridView
            android:id="@+id/noscrollgridview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="10dp"
            android:numColumns="3"
            android:scrollbars="none"
            android:verticalSpacing="3dp" />-->

        <TextView
            android:id="@+id/btn_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="21sp"
            android:background="@drawable/button_style_blue"
            android:padding="@dimen/dp_5"
            android:textColor="#fff"
            android:layout_margin="@dimen/dp_10"
            android:text="添加图片+"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_selected_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp" />
        <TextView
            android:id="@+id/drag_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="（左右侧滑可选择删除图片哦）"
            android:textColor="#ACACAC"
            android:visibility="gone" />

        <View
            android:layout_height="0.5dip"
            android:background="@color/divider"
            android:layout_width="match_parent"/>

       <!-- <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="海风暴福利:"
            android:padding="@dimen/dp_10"
            android:textStyle="bold"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="          选择说说的商品后，凡是有用户在该说说点击商品下单购买的，说说作者都会得到所推商品的利润。"
            />
        <include layout="@layout/recy_demo"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_height="match_parent"
            android:layout_width="match_parent" />-->
    </LinearLayout>

</LinearLayout>