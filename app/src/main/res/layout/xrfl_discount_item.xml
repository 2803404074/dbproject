<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_109"
    android:background="@mipmap/xrfl_card_bg"
    android:layout_marginBottom="@dimen/dp_10"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_weight="2"
        android:layout_width="1dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name"
            android:textStyle="bold"
            android:textSize="@dimen/sp_25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10元优惠卷"
            android:textColor="@color/white" />
        <TextView
            android:textSize="@dimen/sp_9"
            android:id="@+id/details"
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:text="全场满200元可立即使用"
            android:textColor="@color/red" />
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="1dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/limit"
            android:textSize="@dimen/sp_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="限时优惠"
            android:textColor="@color/white" />

        <TextView
            android:textSize="@dimen/sp_10"
            android:id="@+id/limit_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全场通用"
            android:textColor="@color/white" />
        <top.androidman.SuperButton
            android:id="@+id/linear_buy_state"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_24"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_5"
            app:color_pressed="@color/white"
            app:color_normal="@color/white"
            app:corner="@dimen/sp_12"
            app:text="立即领取"
            app:textColor="@color/red"
            app:textSize="@dimen/sp_10" />
    </LinearLayout>
</LinearLayout>
