<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/color_fafafa"
    >
        <LinearLayout
            android:id="@+id/hx_item_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/hx_lv_icon"
                android:layout_gravity="center"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_8"
                />
            <TextView
                android:gravity="center"
                android:id="@+id/hx_lv_name"
                android:textSize="12sp"
                android:textColor="@color/color_939393"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:text="t****123"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/comment_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dp_8"
                android:text="45分钟前"/>
        </LinearLayout>

    <TextView
        android:paddingHorizontal="@dimen/dp_10"
        android:textSize="12sp"
        android:id="@+id/hx_lv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="评论内容+++++++++++++++"
        android:textColor="@color/color_2c2c2c"
        android:layout_marginTop="@dimen/dp_16"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/com_img1"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"/>
        <ImageView
            android:id="@+id/com_img2"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:id="@+id/com_img3"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
</LinearLayout>
